---
/**
 * WhatsAppButton.astro
 * Botón flotante de WhatsApp para contacto directo - Barbería Premium
 * Se muestra fijo en la esquina inferior derecha
 */

import { barberia } from '../data/barberia.js';

interface Props {
  message?: string;
  position?: 'bottom-right' | 'bottom-left';
}

const {
  message = barberia.business.whatsappMessage,
  position = 'bottom-right',
} = Astro.props;

const whatsappLink = barberia.business.whatsapp 
  ? `https://wa.me/${barberia.business.whatsapp}?text=${encodeURIComponent(message)}`
  : '#';

const positionClasses = position === 'bottom-right'
  ? 'right-4 sm:right-6'
  : 'left-4 sm:left-6';
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  class={`fixed bottom-4 sm:bottom-6 ${positionClasses} z-50 group`}
  aria-label="Contactar por WhatsApp"
  id="whatsapp-button"
>
  <!-- Botón -->
  <div class="relative">
    <!-- Animación de pulso -->
    <span class="absolute inset-0 bg-green-500 rounded-full animate-ping opacity-75"></span>
    
    <!-- Botón principal -->
    <div class="relative flex items-center justify-center w-14 h-14 sm:w-16 sm:h-16 bg-green-500 text-white rounded-full shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300">
      <!-- Icono de WhatsApp -->
      <svg
        class="w-8 h-8 sm:w-9 sm:h-9"
        fill="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
      </svg>
    </div>
    
    <!-- Badge de notificación (opcional) -->
    <span class="absolute -top-1 -right-1 flex h-5 w-5 items-center justify-center rounded-full bg-red-500 text-white text-xs font-bold ring-2 ring-white">
      1
    </span>
  </div>
  
  <!-- Tooltip -->
  <div class="absolute right-full mr-3 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
    <div class="bg-neutral-900 text-white text-sm font-medium px-4 py-2 rounded-lg shadow-lg whitespace-nowrap">
      ¡Agenda tu hora por WhatsApp! ✂️
      <!-- Flecha del tooltip -->
      <svg class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-full h-2 w-2 text-neutral-900" x="0px" y="0px" viewBox="0 0 255 255">
        <polygon class="fill-current" points="0,0 127.5,127.5 0,255"/>
      </svg>
    </div>
  </div>
</a>

<style>
  /* Animación personalizada para el botón */
  @keyframes bounce-subtle {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
  
  #whatsapp-button:hover > div > div {
    animation: bounce-subtle 0.6s ease-in-out;
  }
  
  /* Ocultar badge si no hay notificaciones */
  #whatsapp-button:not(.has-notification) span:last-child {
    display: none;
  }
</style>

<script>
  // Animación de entrada después de 2 segundos
  document.addEventListener('DOMContentLoaded', () => {
    const whatsappButton = document.getElementById('whatsapp-button');
    
    setTimeout(() => {
      whatsappButton?.classList.add('animate-slide-up');
    }, 2000);
    
    // Tracking de clics (opcional - para analytics)
    whatsappButton?.addEventListener('click', () => {
      if (typeof gtag !== 'undefined') {
        gtag('event', 'click', {
          event_category: 'Contact',
          event_label: 'WhatsApp Button',
        });
      }
    });
  });
</script>
